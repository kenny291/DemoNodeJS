extends layout
block content
      include nav.pug
      .container
            h3 Add new user
            h3 Add new user
            form(action = "/person", method = "POST")
               div.form-group
                  label(for = "name") Name
                  br
                  input(name = "name", placeholder="Enter your username")
               div.form-group
                  label(for = "password") Password
                  br
                  input(name = "pwd",  type="password")
               button.btn.btn-primary(type='submit', class="btn btn-default") Create new person

            if errors 
              ul
                 for error in errors
                   li!= error.msg